genrule(
  name = 'gen_aar',
  cmd = '$(exe :aar_generator) $TMP $OUT',
  out = 'the.aar',
  visibility = [
    'PUBLIC',
  ],
)

genrule(
  name = 'gen_aar-with-jsr',
  cmd = '$(exe :aar_generator) ' +
    '--lib $(location //third-party/jsr:jsr) $TMP $OUT',
  out = 'jsr.aar',
  visibility = [
    'PUBLIC',
  ],
)

python_binary(
  name = 'aar_generator',
  main = 'gen_aar.py',
)

android_prebuilt_aar(
  name = 'aar',
  aar = ':gen_aar',
)

android_library(
  name = 'lib',
  srcs = [ 'ExampleActivity.java' ],
  deps = [ ':aar' ],
)

keystore(
  name = 'debug',
  store = 'debug.keystore',
  properties = 'debug.keystore.properties',
  visibility = ['PUBLIC'],
)

android_binary(
  name = 'app',
  manifest = 'AndroidManifest.xml',
  keystore = ':debug',
  package_type = 'DEBUG',
  deps = [
    ':lib',
  ],
)

project_config(
  src_target = ':app',
)

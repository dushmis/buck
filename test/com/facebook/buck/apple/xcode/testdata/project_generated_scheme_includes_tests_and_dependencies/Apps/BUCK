EMPTY_CONFIGS = {
  'Debug': {},
  'Release': {},
}

apple_binary(
  name = 'TestAppBinary',
  configs = EMPTY_CONFIGS,
  srcs = [],
  frameworks = [],
  deps = [
    '//Libraries:Dep1',
    '//Libraries:Dep2',
  ],
)

apple_bundle(
  name = 'TestApp',
  deps = [':TestAppBinary'],
  binary = ':TestAppBinary',
  extension = 'app',
  info_plist = 'Info.plist',
  tests = [':TestAppTests'],
)

apple_test(
  name = 'TestAppTests',
  extension = 'octest',
  configs = EMPTY_CONFIGS,
  info_plist = 'Test.plist',
  srcs = [],
  frameworks = [],
  deps = [
    ':TestApp',
    '//Libraries:Dep1',
    '//Libraries:Dep3',
  ],
)

xcode_workspace_config(
  name = 'workspace',
  src_target = '//Apps:TestApp'
)
